{
    "swagger": "2.0",
    "info": {
        "title": "HMPPS Digital Hub API",
        "description": "This is the HMPPS Digital Hub API.",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "thehub@digital.justice.gov.uk"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "host": "drupal.digital-hub-stage.hmpps.dsd.io",
    "basePath": "/v1",
    "schemes": [
        "https"
    ],
    "paths": {
        "/api/content/{nid}": {
            "get": {
                "tags": [
                    "Content"
                ],
                "parameters": [
                    {
                        "name": "{id}",
                        "in": "path",
                        "description": "ID of content to be returned",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "_format",
                        "in": "query",
                        "description": "Response format, should be 'json'",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "_lang",
                        "in": "query",
                        "description": "The language tag to translate results, if there is no translation available then the site default is returned, the default is 'en' (English). Options are 'en' (English) or 'cy' (Welsh).",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hub content resource"
                    }
                }
            }
        },
        "/api/content/featured": {
            "get": {
                "tags": [
                    "Content"
                ],
                "parameters": [
                    {
                        "name": "_format",
                        "in": "query",
                        "description": "Response format, should be 'json'",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "_number",
                        "in": "query",
                        "description": "Number of results to bring back, the default is '1'.",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "_category",
                        "in": "query",
                        "description": "ID of category to return, the default is to being back all categories.",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "_lang",
                        "in": "query",
                        "description": "The language tag to translate results, if there is no translation available then the site default is returned, the default is 'en' (English). Options are 'en' (English) or 'cy' (Welsh).",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hub featured content resource"
                    }
                }
            }
        },
        "/api/menu": {
            "get": {
                "tags": [
                    "Menu"
                ],
                "parameters": [
                    {
                        "name": "_parent",
                        "in": "path",
                        "description": "ID parent page, default is '0' the top level menu",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "_format",
                        "in": "query",
                        "description": "Response format, should be 'json'",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "_lang",
                        "in": "query",
                        "description": "The language tag to translate results, if there is no translation available then the site default is returned, the default is 'en' (English). Options are 'en' (English) or 'cy' (Welsh).",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hub main menu resource"
                    }
                }
            }
        },
        "/api/content/promoted": {
            "get": {
                "tags": [
                    "Content"
                ],
                "parameters": [
                    {
                        "name": "_format",
                        "in": "query",
                        "description": "Response format, should be 'json'",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "_lang",
                        "in": "query",
                        "description": "The language tag to translate results, if there is no translation available then the site default is returned, the default is 'en' (English). Options are 'en' (English) or 'cy' (Welsh).",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hub featured content resource"
                    }
                }
            }
        },
        "/api/vocabulary/{category}": {
            "get": {
                "tags": [
                    "Category"
                ],
                "parameters": [
                    {
                        "name": "_format",
                        "in": "query",
                        "description": "Response format, should be 'json'",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "{category}",
                        "in": "query",
                        "description": "ID of category to return",
                        "required": true,
                        "type": "integer"
                    },
                    {
                        "name": "_lang",
                        "in": "query",
                        "description": "The language tag to translate results, if there is no translation available then the site default is returned, the default is 'en' (English). Options are 'en' (English) or 'cy' (Welsh).",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Hub vocabulary resource"
                    }
                }
            }
        }
    },
    "definitions": {},
    "externalDocs": {
        "description": "Find out more about Swagger",
        "url": "http://swagger.io"
    }
}